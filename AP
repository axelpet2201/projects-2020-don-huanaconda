    res = optimize.minimize(obj, u, method='Nelder-Meat')
    u_best_scipy = res.u[0]
    f_best_scipy = res.fun
    
    print(f'best with scipy.optimise is {f_best_scipy:.8f} at u = {u_best_scipy:.8f}')
    
